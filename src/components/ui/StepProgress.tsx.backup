import { CheckCircle, Circle } from 'lucide-react' interface Step { id: number title: string description: string completed: boolean current: boolean } interface StepProgressProps { steps: Step[] } export function StepProgress({ steps }: StepProgressProps) { return ( <div className="space-y-4"> {steps.map((step, index) => ( <div key={step.id} className={`flex items-start gap-4 ${ step.current ? 'opacity-100' : step.completed ? 'opacity-60' : 'opacity-40' }`} > {/* Step Icon */} <div className="flex-shrink-0 mt-1"> {step.completed ? ( <CheckCircle className="w-6 h-6 text-purple-500"/> ) : step.current ? ( <div className="w-6 h-6 rounded-full border-2 border-purple-500 flex items-center justify-center"> <span className="text-sm font-medium text-purple-500">{step.id}</span> </div> ) : ( <Circle className="w-6 h-6 text-gray-400"/> )} </div> {/* Step Content */} <div className="flex-1"> <h3 className={`text-lg font-medium ${ step.current ? 'text-purple-500' : 'text-white' }`}> {step.title} </h3> <p className="text-sm text-gray-600 mt-1"> {step.description} </p> </div> {/* Step Status */} {step.completed && ( <span className="flex-shrink-0 text-sm text-purple-500 font-medium"> Complété </span> )} </div> ))} </div> ) } 